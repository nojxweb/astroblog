---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const pageTitle = "Page d'accueil";

const allPosts = await getCollection("notes");

// Trier du plus récent au plus ancien et limiter à 10
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 10)
  .map((post) => ({
    ...post,
    // Limite à 100 caractères
    excerpt:
      post.body.length > 100 ? post.body.substring(0, 100) + "..." : post.body,
  }));
---

<BaseLayout pageTitle={pageTitle}>
  <h2>Curiosités - Inspirations</h2>
  <img class="img-cover" src="/images/Cerfdanschamp.jpg" alt="Description de l'image" />
  <p>
    Cet espace propose une collection de découvertes, d'inspirations, d'idées et d'expériences sur des sujets variés (Tech, Maison, Developpement, Style de vie...).
    <br/>L'objectif est d'explorer de nouvelles perspectives et de nourrir sa curiosité.
  </p>

  <section class="recent-posts">
    <h2>Derniers posts</h2>
    {
      recentPosts.map((post) => (
        <article class="post-preview">
          <div class="post-preview-header">
            <h3>
              <a href={`/posts/${post.id}/`}>{post.data.title}</a>
            </h3>
            <p class="excerpt">{post.excerpt}</p>
          </div>
          {post.data.image && (
            <div class="post-image">
              <image
                src={post.data.image.src}
                alt={post.data.image.alt || post.data.title}
              />
            </div>
          )}
        </article>
      ))
    }
  </section>
</BaseLayout>
